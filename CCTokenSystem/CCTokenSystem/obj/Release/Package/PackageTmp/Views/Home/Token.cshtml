<script src="~/Scripts/Controller/TokenCtrl/TokenCtrl.js"></script>
<div ng-controller="AdvisorCtrl">
    <form class="form-horizontal" name="myForm" novalidate>
        <h3>Token Details</h3>
        <div class="form-group">
            <label for="studentid" class="col-sm-5 control-label">Student ID:</label>
            <div class="col-sm-7">
                <p>{{token.student_id}}</p>
                @*<input type="text" name="studentid" class="form-control" ng-model="token.student_id" placeholder="Student ID" ng-minlength="9" ng-maxlength="9" ng-pattern="/^[0-9]+$/" required>
                <span style="color:red" ng-show="myForm.studentid.$dirty && myForm.studentid.$invalid">
                    <span ng-show="myForm.studentid.$error.required">Student ID is required</span>
                    <span ng-show="myForm.studentid.$error.minlength || myForm.studentid.$error.maxlength || myForm.studentid.$error.pattern">Invalid Student Id (Only numbers)</span>
                </span>*@
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-5 control-label">Token ID #:</label>
            <div class="col-sm-7">
                <label>{{token.tokenid}}</label>
                @*<input type="text" name="lname" class="form-control" ng-model="token.issue" placeholder="Last Name" ng-pattern="/^[a-zA-Z ]*$/" required>
                <span style="color:red" ng-show="myForm.lname.$dirty && myForm.lname.$invalid">
                    <span ng-show="myForm.lname.$error.required">Last name is required</span>
                    <span ng-show="myForm.lname.$error.pattern">Invalid Last Name</span>
                </span>*@
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-5 control-label">Issue:</label>
            <div class="col-sm-7">
                <p>{{token.issue}}</p>
                @*<input type="text" name="lname" class="form-control" ng-model="token.issue" placeholder="Last Name" ng-pattern="/^[a-zA-Z ]*$/" required>
                <span style="color:red" ng-show="myForm.lname.$dirty && myForm.lname.$invalid">
                    <span ng-show="myForm.lname.$error.required">Last name is required</span>
                    <span ng-show="myForm.lname.$error.pattern">Invalid Last Name</span>
                </span>*@
            </div>
        </div>

        <div class="form-group">
            <label for="phonenumber" class="col-sm-5 control-label">Comments:</label>
            <div class="col-sm-7">
                <textarea  class="form-control" rows="5" ng-model="token.comments" >
                </textarea>
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <input type="submit" ng-show="addSt" ng-click="Update(token)" class="btn btn-success" value="Submit" />
            </div>
        </div>
        <div class="col-lg-12">
            <h3>Advisor Details</h3>
            <table class="table table-striped">
                <tr>
                    <th>Advisor ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    @*<th>Department</th>*@
                    <th>Actions</th>
                </tr>
                <tr ng-repeat="advisor in AdvisorData">
                    <td>
                        {{advisor.Advisor_Id}}
                    </td>
                    <td>
                        {{advisor.Firstname}}
                    </td>
                    <td>
                        {{advisor.Lastname}}
                    </td>
                    <td>
                        {{advisor.Phoneno}}
                    </td>
                    <td>
                        {{advisor.Email}}
                    </td>
                    @*<td>
                            {{advisor.dept_Id}}
                        </td>*@
                    <td>
                        <button class="btn btn-warning" ng-click="Select(advisor.Advisor_Id)"><span class="glyphicon glyphicon-pencil"></span></button>
                        <button class="btn btn-danger" ng-click="Remove(advisor.Advisor_Id)"><span class="glyphicon glyphicon-remove"></span></button>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</div>
