<script src="~/Scripts/Controller/DeptCtrl/DeptCtrl.js"></script>
<div ng-controller="DeptCtrl">
    <form class="form-horizontal" name="myForm" novalidate>
        <h3>Add Department</h3>
        <div class="form-group">
            <label for="firstname" class="col-sm-5 control-label">Department Name:</label>
            <div class="col-sm-7">
                <input type="text" name="deptname" class="form-control" ng-model="dept.dept_name" placeholder="Department Name" ng-pattern="/^[a-zA-Z ]*$/" required>
                <span style="color:red" ng-show="myForm.deptname.$dirty && myForm.deptname.$invalid">
                    <span ng-show="myForm.deptname.$error.required">Department name is required</span>
                    <span ng-show="myForm.deptname.$error.pattern">Invalid Department Name</span>
                </span>
            </div>
        </div>
        
        <div class="form-group">
            <label for="lastname" class="col-sm-5 control-label">Room Number:</label>
            <div class="col-sm-7">
                <input type="text" name="roomno" class="form-control" ng-model="dept.room_no" placeholder="Room Number" ng-pattern="/^[a-zA-Z 0-9 ]*$/" required>
                <span style="color:red" ng-show="myForm.roomno.$dirty && myForm.roomno.$invalid">
                    <span ng-show="myForm.roomno.$error.required">Room Number is required</span>
                    <span ng-show="myForm.roomno.$error.pattern">Invalid Room Number Name</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="campusName" class="col-sm-5 control-label">Campus Name:</label>
            <div class="col-sm-7">
                <select id="campusId" name="campus" class="form-control" ng-model="dept.campus_Id"
                        ng-options="cam.CampusId as cam.CampusName for cam in CampusData">
                    <option value="">Select Campus Name</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <input type="submit" ng-show="addSt" ng-click="Create(dept)" ng-disabled="
                       myForm.deptname.$pristine || myForm.deptname.$dirty && myForm.deptname.$invalid ||
                       myForm.roomno.$pristine || myForm.roomno.$dirty && myForm.roomno.$invalid ||
                       myForm.campus.$pristine || myForm.campus.$dirty && myForm.campus.$invalid "
                       class="btn btn-success" value="Submit" />
                <input type="submit" ng-show="updateSt" ng-click="Update(dept)" ng-disabled="
                       myForm.deptname.$dirty && myForm.deptname.$invalid ||
                       myForm.roomno.$dirty && myForm.roomno.$invalid ||
                       myForm.campus.$dirty && myForm.campus.$invalid "
                       class="btn btn-warning" value="Update" />
                <input type="submit" ng-show="clearSt" ng-click="Clear()" class="btn btn-default" value="Create New" />
            </div>
        </div>
        <div class="col-lg-12">
            <h3>Department Details</h3>
            <table class="table table-striped">
                <tr>
                    <th>S.No</th>
                    <th>Department Name</th>
                    <th>Room Number</th>
                    @*<th>Campus Name</th>*@
                    <th>Actions</th>
                </tr>
                <tr ng-repeat="dept in DeptData">
                    <td>
                        {{dept.dept_Id}}
                    </td>
                    <td>
                        {{dept.dept_name}}
                    </td>
                    <td>
                        {{dept.room_no}}
                    </td>
                    @*<td>
                        {{dept.campus_Id}}
                    </td>*@
                    <td>
                        <button class="btn btn-warning" ng-click="Select(dept.dept_Id)"><span class="glyphicon glyphicon-pencil"></span></button>
                        <button class="btn btn-danger" ng-click="Remove(dept.dept_Id)"><span class="glyphicon glyphicon-remove"></span></button>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</div>
